extends layout
block content
    h1 #{title}
    form(method='POST' action="/products/edit/"+product._id)
        #form-group
            label Name: 
            input.form-control(name='name' type="text" value=product.name)
        #form-group
            label Prices: 
            input.form-control(name='prices' type="text" value=product.prices)
            br
        input.btn.btn-primary(type="submit" ,value="Update")